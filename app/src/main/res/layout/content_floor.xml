<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FloorActivity"
    tools:showIn="@layout/activity_floor">

    <ImageView
        android:id="@+id/imageViewFloor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="false"
        app:srcCompat="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="50sp"
        android:text="@string/text4"
        android:layout_toEndOf="@id/imageViewFloor" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageViewFloor"
        android:layout_marginStart="50dp"
        android:theme="@android:style/Animation"
        android:visibility="visible"
        tools:background="@android:drawable/alert_light_frame">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="10"
            android:textAlignment="center"
            android:textSize="25sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/frameLayout"
        android:layout_below="@id/imageViewFloor"
        android:textSize="35sp"
        android:text="dias"/>

    <TextView
        android:id="@+id/room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sala"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:layout_below="@+id/frameLayout"
        android:layout_toEndOf="@id/imageViewFloor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_toEndOf="@id/title"
        android:layout_marginStart="15dp"
        android:textSize="40sp"
        android:text="✓"/>

    <TextView
        android:id="@+id/room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cozinha"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:layout_below="@+id/room1"
        android:layout_toEndOf="@id/imageViewFloor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room1"
        android:layout_toEndOf="@id/title"
        android:layout_marginStart="15dp"
        android:textSize="40sp"
        android:text="✓"/>

    <TextView
        android:id="@+id/room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quarto"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:layout_below="@+id/room2"
        android:layout_toEndOf="@id/imageViewFloor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room2"
        android:layout_toEndOf="@id/title"
        android:layout_marginStart="15dp"
        android:textSize="40sp"
        android:text="✓"/>

</RelativeLayout>